# API key for creating issuers and badge classes
API_KEY=your_api_key_here

# Your public domain (used for badge URLs and issuer verification)
PUBLIC_DOMAIN=localhost:3000

# Ed25519 key pair for cryptographic badge signing
# Generate with: openssl genpkey -algorithm Ed25519 -outform PEM
# Then base64-encode for env vars, or paste PEM directly
DEFAULT_PRIVATE_KEY=
DEFAULT_PUBLIC_KEY=

# Server configuration
PORT=3000
NODE_ENV=development

# Optional: custom writable directory for hosted files and verifier state.
# For Railway volumes, set this to the mounted path (for example /data/uploads).
UPLOADS_DIR=uploads

# Optional: public issuer verification rate limits (fixed window).
PUBLIC_ISSUER_VERIFY_MAX_REQUESTS=10
PUBLIC_ISSUER_VERIFY_WINDOW_MS=3600000
