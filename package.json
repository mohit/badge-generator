{
  "name": "badge-generator",
  "version": "1.0.0",
  "description": "Complete Open Badges hosting platform with v2.0/v3.0 support, Smart Badge Creator, and MCP integration for AI assistants",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "echo 'No linting configured'",
    "test": "node run-tests.js",
    "test:api-key": "node --test tests/api-key-config.test.js",
    "test:domain": "node tests/domain-validation.test.js",
    "test:mcp": "node mcp-server/test.js",
    "cli": "node cli/badge-cli.js"
  },
  "bin": {
    "badge-cli": "./cli/badge-cli.js"
  },
  "keywords": [
    "open-badges",
    "digital-credentials",
    "badges",
    "education",
    "certification",
    "verifiable-credentials",
    "mcp-server",
    "claude-integration"
  ],
  "author": "Badge Generator Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohit/badge-generator.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
